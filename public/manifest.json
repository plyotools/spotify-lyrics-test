{
  "manifest_version": 3,
  "name": "Spotify Lyrics",
  "version": "1.0.0",
  "description": "Display synchronized lyrics for currently playing Spotify songs",
  "permissions": [
    "storage",
    "identity",
    "windows"
  ],
  "host_permissions": [
    "https://accounts.spotify.com/*",
    "https://api.spotify.com/*",
    "https://lrclib.net/*",
    "https://api.musixmatch.com/*",
    "https://sdk.scdn.co/*",
    "https://api.setlist.fm/*"
  ],
  "action": {
    "default_title": "Spotify Lyrics",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}

